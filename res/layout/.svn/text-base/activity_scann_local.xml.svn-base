<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/scann_music_top"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/top_bg" >

        <ImageButton
            android:id="@+id/scann_set_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_arrow_normal"
           />

        <TextView
            android:id="@+id/musiclist_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
  			android:layout_toRightOf="@id/scann_set_back"
  			android:layout_centerVertical="true"
  			android:layout_marginLeft="10dp"
            android:text="扫描歌曲"
            android:textColor="@color/white"
            android:textSize="20sp" />


        
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/scann_music_control"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:background="@drawable/top_bg"
        android:layout_below="@id/scann_music_top"
        >
       	
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/scann_sweep"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />
		
        
    </RelativeLayout>



</RelativeLayout>