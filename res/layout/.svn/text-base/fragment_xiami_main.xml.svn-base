<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
		
                
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/fragment_main_line1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/title_head" />

                <LinearLayout
                    android:id="@+id/fragment_content1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/fragment_main_line1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="推荐专辑"
                        android:textColor="@color/mid_grey"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Recommend albums"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/more_newalbum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:paddingRight="12dp"
                    android:text="更多 >"
                    android:textSize="14sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.7dp"
                    android:layout_below="@id/fragment_content1"
                    android:layout_margin="6dp"
                    android:background="@color/light_grey"
                    android:paddingBottom="8dp" />
            </RelativeLayout>

            <GridView
                android:id="@+id/list_gridView_album"
                android:layout_width="fill_parent"
                android:layout_height="310dp"
                android:columnWidth="150dp"
                android:numColumns="3" >
            </GridView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/fragment_main_line2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/title_head" />

                <LinearLayout
                    android:id="@+id/fragment_content2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/fragment_main_line2"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="虾米推荐艺人"
                        android:textColor="@color/mid_grey"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Xiami recommend artists"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/inagroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:paddingRight="12dp"
                    android:text="换一组 >"
                    android:textSize="14sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.7dp"
                    android:layout_below="@id/fragment_content2"
                    android:layout_margin="6dp"
                    android:background="@color/light_grey"
                    android:paddingBottom="8dp" />
            </RelativeLayout>

            <ListView
                android:id="@+id/list_gridView_hotsong"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:divider="@color/lighter_grey"
                android:dividerHeight="1dp"
                android:footerDividersEnabled="true" >
            </ListView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="620dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/fragment_main_line3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/title_head" />

                <LinearLayout
                    android:id="@+id/fragment_content3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/fragment_main_line3"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="今日歌单"
                        android:textColor="@color/mid_grey"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Today&apos;s playlist"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:paddingRight="12dp"
                    android:text="更多 >"
                    android:textSize="14sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.7dp"
                    android:layout_below="@id/fragment_content3"
                    android:layout_margin="6dp"
                    android:background="@color/light_grey"
                    android:paddingBottom="8dp" />
            </RelativeLayout>

            <ListView
                android:id="@+id/list_dailysong"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:divider="@color/lighter_grey"
                android:dividerHeight="1dp"
                android:footerDividersEnabled="true" >
            </ListView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>